<style>
    :root {
      --primary-color: #E67E22;
      --text-color: #333;
      --background-color: #fff;
  }

  body {
      margin: 0;
      font-family: Arial, sans-serif;
      color: var(--text-color);
  }
  .promo-banner {
    background: black;
    color: white;
    text-align: center;
    padding: 10px;
  }

  .main-header {
    display: flex;
    align-items: center;
    padding: 20px;
    gap: 20px;
  }

  .logo img {
    width: 50px;
    height: 50px;
  }

  .categories-nav {
    border-bottom: 1px solid #ddd;
  }

  .categories-nav ul {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
    gap: 30px;
    padding: 0 20px;
  }

  .categories-nav li {
    padding: 15px 0;
    cursor: pointer;
  }

  .categories-nav li.active {
    color: #FF6B2B;
    border-bottom: 2px solid #FF6B2B;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
    padding: 20px;
  }

  .service-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
  }

  .service-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .service-content {
    padding: 15px;
  }

  .tag {
    display: inline-block;
    padding: 4px 8px;
    background: #f0f0f0;
    border-radius: 4px;
    font-size: 12px;
    margin-right: 8px;
  }

  .best-seller {
    background: #FF6B2B;
    color: white;
  }

  .rating {
    display: flex;
    align-items: center;
    gap: 10px;
    margin: 10px 0;
  }

  .stars {
    color: #FFD700;
  }

  .price {
    font-weight: bold;
    font-size: 1.2em;
    margin-top: 10px;
  }

  .view-all-wrapper {
    text-align: center;
    padding: 20px;
  }

  .view-all-button {
    padding: 10px 30px;
    border: 2px solid #FF6B2B;
    color: #FF6B2B;
    background: transparent;
    border-radius: 4px;
    cursor: pointer;
  }

</style>
<%= render 'componants/searchbar' %>

<nav class="categories-nav">
  <ul>
    <li class="active">All professions</li>
    <li>Plombier</li>
    <li>Informaticien</li>
    <li>Menuisier</li>
    <li>Cuisine</li>
    <li>Entretien</li>
    <li>Pool Cleaner</li>
    <li>Daddy Loyalty Program</li>
  </ul>
</nav>

<div class="services-grid">
  <% @daddy_services.each do |service| %>
    <div class="service-card">
      <div class="service-image">
        <img src="https://placehold.co/400x250/gray/white" alt="<%= service.title %>">
      </div>
      <div class="service-content">
        <span class="tag">COURSE</span>
        <span class="tag best-seller">BEST SELLER</span>
        <h3><%= service.title %></h3>
        <div class="rating">
          <span class="stars">★★★★☆</span>
          <span>(191)</span>
          <span>1.3 hours</span>
        </div>
        <p>by <%= service.user.username %></p>
        <p class="price">$<%= service.price %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="view-all-wrapper">
  <button class="view-all-button">View All Daddy</button>
</div>
