<!-- HTML modifié avec des classes pour le style -->
<div class="login-container">
  <h2 class="login-title">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="form-inputs">
      <div class="input-group">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-input" } %>
      </div>

      <div class="input-group">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-input" } %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="remember-me-group">
          <%= f.input :remember_me, as: :boolean %>
        </div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "login-btn" %>
    </div>
  <% end %>

  <div class="links-section">
    <%= render "devise/shared/links" %>
  </div>
</div>

<style>
  /* Styles pour la page de login qui s'intègrent avec les styles existants */
.login-container {
  max-width: 500px;
  margin: 3rem auto;
  padding: 2.5rem;
  background-color: #ffffff;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  animation: fadeIn 0.6s ease-out;
}

.login-title {
  color: #333;
  font-size: 2.2rem;
  margin-bottom: 2.5rem;
  text-align: center;
  font-weight: 600;
}

.login-form {
  display: flex;
  flex-direction: column;
  gap: 1.8rem;
  width: 100%;
}

.remember-me-group {
  margin-top: 1rem;
}

.remember-me-group .form-check {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.remember-me-group input[type="checkbox"] {
  width: 18px;
  height: 18px;
  border: 1.5px solid #eef0f5;
  border-radius: 4px;
  cursor: pointer;
}

.remember-me-group input[type="checkbox"]:checked {
  background-color: #ff9966;
  border-color: #ff9966;
}

.remember-me-group label {
  color: #666;
  font-size: 0.95rem;
  cursor: pointer;
}

.login-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff9966, #ff5e62);
  color: white;
  padding: 1rem;
  border: none;
  border-radius: 8px;
  font-size: 1.1rem;
  font-weight: 500;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  margin-top: 1rem;
}

.login-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(255, 153, 102, 0.3);
}

/* Styles spécifiques pour les liens sous le formulaire */
.links-section {
  margin-top: 2rem;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 0.8rem;
}

.links-section a {
  color: #666;
  text-decoration: none;
  font-size: 0.95rem;
  transition: color 0.3s ease;
  padding: 0.5rem;
}

.links-section a:hover {
  color: #ff9966;
}

/* Responsive */
@media (max-width: 600px) {
  .login-container {
    margin: 1rem;
    padding: 1.5rem;
  }

  .login-title {
    font-size: 1.8rem;
  }
}

/* Le reste des styles (inputs, animations, etc.) est hérité du CSS précédent */
</style>
