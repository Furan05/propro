<div class="edit-container">
  <h2 class="edit-title">Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "edit-form" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="input-group">
        <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-input" } %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="confirmation-text">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <div class="input-group">
        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    input_html: { autocomplete: "new-password", class: "form-input" } %>
      </div>

      <div class="input-group">
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password", class: "form-input" } %>
      </div>

      <div class="input-group">
        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    input_html: { autocomplete: "current-password", class: "form-input" } %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "update-btn" %>
    </div>
  <% end %>

  <div class="cancel-section">
    <h3 class="cancel-title">Cancel my account</h3>
    <div class="cancel-content">
      <span>Unhappy?</span>
      <%= button_to "Cancel my account", registration_path(resource_name),
          data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
          method: :delete,
          class: "cancel-btn" %>
    </div>
  </div>

  <%= link_to "Back", :back, class: "back-link" %>
</div>
<style>
  /* CSS moderne et minimaliste */
.edit-container {
  max-width: 600px;
  margin: 2rem auto;
  padding: 2rem;
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.edit-title {
  color: #333;
  font-size: 2rem;
  margin-bottom: 2rem;
  text-align: center;
}

.edit-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.input-group {
  margin-bottom: 1.5rem;
}

.form-input {
  width: 100%;
  padding: 0.8rem;
  border: 1px solid #ddd;
  border-radius: 5px;
  transition: border-color 0.3s ease;
}

.form-input:focus {
  border-color: #ff9966;
  outline: none;
  box-shadow: 0 0 0 2px rgba(255, 153, 102, 0.2);
}

.hint {
  font-size: 0.85rem;
  color: #666;
  margin-top: 0.5rem;
}

.update-btn {
  background: linear-gradient(135deg, #ff9966, #ff5e62);
  color: white;
  padding: 0.8rem 2rem;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.update-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(255, 153, 102, 0.3);
}

.cancel-section {
  margin-top: 3rem;
  padding-top: 2rem;
  border-top: 1px solid #eee;
}

.cancel-title {
  color: #333;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.cancel-btn {
  background-color: #fff;
  color: #ff5e62;
  border: 1px solid #ff5e62;
  padding: 0.6rem 1.2rem;
  border-radius: 5px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.cancel-btn:hover {
  background-color: #ff5e62;
  color: white;
}

.back-link {
  display: inline-block;
  margin-top: 2rem;
  color: #666;
  text-decoration: none;
  transition: color 0.3s ease;
}

.back-link:hover {
  color: #ff9966;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.edit-container {
  animation: fadeIn 0.5s ease-out;
}

.form-input, .update-btn, .cancel-btn {
  transition: transform 0.2s ease;
}

.form-input:focus, .update-btn:hover, .cancel-btn:hover {
  transform: translateY(-2px);
}
</style>
