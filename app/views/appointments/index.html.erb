<style>
  .appointments-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 2rem;
    font-weight: 300;
    text-align: center;
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
  }

  .appointment-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transform: translateY(20px);
    opacity: 0;
    animation: slideUp 0.5s ease forwards;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .appointment-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
  }

  .appointment-card h3 {
    color: #2c3e50;
    font-size: 1.4rem;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .appointment-card p {
    color: #666;
    margin: 0.5rem 0;
    font-size: 1rem;
    line-height: 1.5;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Animation delay pour chaque carte */
  .appointment-card:nth-child(1) { animation-delay: 0.2s; }
  .appointment-card:nth-child(2) { animation-delay: 0.4s; }
  .appointment-card:nth-child(3) { animation-delay: 0.6s; }
  /* etc... */
</style>
<div class="appointments-container">
  <h1>Mes rendez-vous</h1>

  <% @appointments.each do |appointment| %>
    <div class="appointment-card">
      <h3><%= appointment.daddy_service.title %></h3>
      <p>Date: <%= appointment.date.strftime("%d/%m/%Y Ã  %H:%M") %></p>
      <p>Prestataire: <%= appointment.daddy_service.user.username %></p>
    </div>
  <% end %>
</div>
